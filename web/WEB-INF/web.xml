<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>ControllerPedidos</servlet-name>
        <servlet-class>servlets.ControllerPedidos</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerPedidos</servlet-name>
        <url-pattern>/Pedidos</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ControllerMesa</servlet-name>
        <servlet-class>servlets.ControllerMesa</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerMesa</servlet-name>
        <url-pattern>/Mesas</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ControllerRestaurante</servlet-name>
        <servlet-class>servlets.ControllerRestaurante</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerRestaurante</servlet-name>
        <url-pattern>/Restaurantes</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ControllerUsuario</servlet-name>
        <servlet-class>servlets.ControllerUsuario</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerUsuario</servlet-name>
        <url-pattern>/Usuarios</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            180
        </session-timeout>
    </session-config>
</web-app>
